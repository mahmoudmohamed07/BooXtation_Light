@model BookXtation.DAL.Models.ViewModels.PublisherViewModel

@* @{
    ViewData["Title"] = "Publisher Details";
} *@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
    ViewBag.Title = "Publisher Details"; 
}

<h2>Publisher Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Contact</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Publisher_ID " class="btn btn-primary">Edit</a> |
    <a asp-controller="admin" asp-action="ViewPublishers" class="btn btn-secondary">Back to List</a>
</div>

