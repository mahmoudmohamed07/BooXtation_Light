@model BookXtation.DAL.Models.ViewModels.PublisherViewModel 

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Publisher";
}

<h2>Edit Publisher</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control mb-2" /> 
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control mb-2" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contact"></label>
        <input asp-for="Contact" class="form-control mb-2" />
        <span asp-validation-for="Contact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="ViewPublishers">Back to All Publishers</a>
    </div>
</form>