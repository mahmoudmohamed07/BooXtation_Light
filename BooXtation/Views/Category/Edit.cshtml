@model BookXtation.DAL.Models.ViewModels.CategoryViewModel 

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control mb-3" /> 
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="ViewCategories">Back to All Categories</a>
    </div>
</form>