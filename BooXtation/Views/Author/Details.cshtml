@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Specify the layout for the view
    ViewBag.Title = "Author Details"; // Set the title for the view
}

<h1>Details for @Model.Name</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <!-- Add more fields here as necessary -->
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Author_ID" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Author_ID" class="btn btn-danger">Delete</a>
    <a asp-action="ViewAuthors"asp-controller="admin" asp-controller="ViewAuthors" asp-action="ViewAuthors" class="btn btn-secondary">Back to List</a>
</div>